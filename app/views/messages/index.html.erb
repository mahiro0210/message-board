<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      内容:<%= message.body %>,
      年齢:<%= message.age %>
        <%= link_to "編集" , edit_message_path(message) , class: "btn btn-xs btn-warning" %>
        <%= link_to "削除" , message , method: :delete, class: "btn btn-xs btn-danger", data:{ confirm: '削除してもよろしいですか？' } %>
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>